{
  "name": "@kherge/prefers-color-scheme",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Kevin Herrera <kevin@herrera.io>",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.1",
    "husky": "^5.1.3",
    "size-limit": "^4.10.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsdx build",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "start": "tsdx watch",
    "test": "tsdx test"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "main": "dist/index.js",
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/prefers-color-scheme.esm.js",
  "size-limit": [
    {
      "path": "dist/prefers-color-scheme.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/prefers-color-scheme.esm.js",
      "limit": "10 KB"
    }
  ],
  "typings": "dist/index.d.ts"
}
